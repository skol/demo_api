{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Django Tests",
            "type": "shell",
            "command": "python",
            "args": [
                "manage.py",
                "test",
                "--verbosity=2"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}